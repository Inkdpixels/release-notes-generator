{
  "name": "@inkdpixels/release-notes-generator",
  "version": "1.0.1",
  "description": "Plugin for semantic-release which utilizes the commit guidelines of Neos.",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run lint && npm run jest:coverage",
    "lint": "eslint src",
    "jest": "jest",
    "jest:watch": "npm run jest -- --watch",
    "jest:coverage": "npm run jest -- --coverage"
  },
  "author": "Tyll Wei√ü <inkdpixels@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^4.4.1",
    "eslint-config-xo": "^0.22.1",
    "jest": "^22.0.0",
    "sinon": "^4.0.0"
  },
  "dependencies": {
    "concat-stream": "^1.6.0",
    "conventional-changelog": "^1.0.0",
    "github-url-from-git": "^1.5.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)spec.js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js"
    ]
  }
}
